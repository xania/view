{
  "include": ["lib"],
  "compilerOptions": {
    "outDir": "dist/es2015",
    "module": "ES2015",
    "lib": ["dom", "ESNext", "ES2018.AsyncIterable"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "target": "ES2015",
    "esModuleInterop": true,
    "typeRoots": ["types"]
  }
}

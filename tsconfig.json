{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    "noEmit": true,

    "jsx": "react-jsx",
    "jsxImportSource": "@xania/view",
    "typeRoots": ["@xania/view/types"],

    "paths": {
      "@xania/view/jsx-runtime": ["./packages/view/jsx-runtime.ts"],
      "@xania/view": ["./packages/view/lib/index.ts"],
      "@xania/state": ["./packages/state/lib/index.ts"]
    },
    "allowSyntheticDefaultImports": true
  }
}

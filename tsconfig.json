{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,

    "paths": {
      "@xania/view": ["./packages/view"],
      "@xania/state": ["./packages/state"],
      "@xania/router": ["./packages/router"]
    },
    "allowSyntheticDefaultImports": true
  }
}

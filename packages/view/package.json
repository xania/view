{
  "name": "@xania/view",
  "version": "0.5.19",
  "license": "MIT",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "typings": "./lib/index.ts",
  "type": "module",
  "keywords": [
    "xania",
    "signals",
    "observable",
    "frp"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs",
      "types": "./lib/index.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.cjs"
    },
    "./jsx-dev-runtime": {
      "import": "./dist/jsx-dev-runtime.js",
      "require": "./dist/jsx-dev-runtime.cjs"
    },
    "./headless": {
      "import": "./dist/headless.js",
      "require": "./dist/headless.cjs"
    }
  },
  "private": false,
  "files": [
    "types",
    "dist",
    "lib",
    "jsx-runtime.d.ts",
    "jsx-dev-runtime.d.ts"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "npm run clean && npx vite --watch build",
    "build": "npm run clean && npx vite build && npm run tsup",
    "tsup": "npm run tsup:headless && npm run tsup:jsx-runtime && npm run tsup:jsx-dev-runtime",
    "tsup:headless": "tsup headless.ts --format esm,cjs --external @xania/view",
    "tsup:jsx-runtime": "tsup jsx-runtime.ts --format esm,cjs --external @xania/view",
    "tsup:jsx-dev-runtime": "tsup jsx-dev-runtime.ts --format esm,cjs --external @xania/view",
    "clean": "npx rimraf dist",
    "prepublishOnly": "npm version patch && npm run build",
    "lint": "tsc"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "author": "Ibrahim ben Salah",
  "devDependencies": {
    "rollup-plugin-dts": "5.2.0",
    "rollup-plugin-typescript": "1.0.1",
    "sass": "^1.57.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.4",
    "rollup-plugin-ts": "^3.2.0",
    "tsup": "^6.7.0",
    "vitest": "^0.30.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xania/view.git"
  }
}
